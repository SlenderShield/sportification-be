# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains development-specific environment variables
# DO NOT commit sensitive data - use .env.local for local overrides
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
APP_NAME=Sportification API
APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://admin:password123@localhost:27017/sportification_dev?authSource=admin
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# -----------------------------------------------------------------------------
# Redis Configuration (Optional - for caching and sessions)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=sportification:dev:
REDIS_TTL=3600

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=dev-jwt-secret-change-in-production-use-strong-random-string
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-use-strong-random-string
JWT_REFRESH_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:4200

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/mpeg

# -----------------------------------------------------------------------------
# Email Configuration (Development - Use ethereal.email or mailtrap)
# -----------------------------------------------------------------------------
EMAIL_SERVICE=gmail
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@sportification.local

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_SECRET=dev-session-secret-change-in-production
SESSION_COOKIE_NAME=sportification.sid
SESSION_TTL=3600
SESSION_REDIS_PREFIX=session:

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=10

# -----------------------------------------------------------------------------
# OAuth Configuration (Development - Use test credentials)
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/api/v1/auth/github/callback

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

# -----------------------------------------------------------------------------
# MFA Configuration
# -----------------------------------------------------------------------------
MFA_ISSUER=Sportification Dev

# -----------------------------------------------------------------------------
# Frontend URL
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# AWS Configuration (Development - Use LocalStack if needed)
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=sportification-dev-uploads

# -----------------------------------------------------------------------------
# Monitoring & APM (Development - Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
DATADOG_API_KEY=
NEW_RELIC_LICENSE_KEY=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true
ENABLE_REDIS=false
ENABLE_EMAIL=false

# -----------------------------------------------------------------------------
# Database Migrations
# -----------------------------------------------------------------------------
RUN_MIGRATIONS=true
RUN_SEEDS=false
